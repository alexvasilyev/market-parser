{% extends "base.html.twig" %}

{% block body %}
    <div class="col-md-12">
        <h1>
            Items /
            <small>List</small>
        </h1>
        <div class="database-filters">
            <div class="row">
                {{ form_start(form) }}
                <div class="form-group col-md-2">
                    {{ form_widget(form.q) }}
                </div>
                <div class="form-group col-md-3">
                    <ul class="requisites" data-prototype="{{ form_widget(form.requisites.vars.prototype)|e('html_attr') }}">
                        {% for requisite in form.requisites %}
                            <li>
                                {{ form_widget(requisite.requisite) }}
                            </li>
                        {% endfor %}
                    </ul>
                </div>
                <div class="form-group col-md-1">
                    {{ form_widget(form.Submit) }}
                </div>
                {{ form_end(form) }}
            </div>
        </div>
        <div class="panel panel-default">
            <div class="panel-heading">
                <div>
                    Total items found:
                    {{ prices|length }}
                </div>
            </div>
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>
                        Place
                    </th>
                    <th>
                        Item
                    </th>
                    <th>
                        Vendor
                    </th>
                    <th>
                        Vend name
                    </th>
                    <th>
                        Quantity
                    </th>
                    <th>
                        Price
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for price in prices %}
                    <tr>
                        <td>
                            {{ price.place }}
                        </td>
                        <td>
                            {{ price.item|raw }}
                        </td>
                        <td>
                            {{ price.vendor }}
                        </td>
                        <td>
                            {{ price.vend_name }}
                        </td>
                        <td>
                            {{ price.quantity }}
                        </td>
                        <td>
                            {{ price.price }}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {#<div class="navigation text-center">#}
                {#<%= knp_pagination_render(pagination) %>#}
            {#</div>#}
        </div>
    </div>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('assets/build/js/requisites.js') }}"></script>
{% endblock %}
